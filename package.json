{
  "name": "hanewinpgp",
  "version": "0.1.0",
  "main": "./dist/hanewinpgp.js",
  "description": "PGP / GnuPG / OpenPGP Message Encryption in JavaScript by Herbert Hanewinkel.",
  "keywords": [
    "pgp",
    "openpgp",
    "gpg",
    "gnupg"
  ],
  "homepage": "https://github.com/dossy/hanewinpgp#readme",
  "bugs": "https://github.com/dossy/hanewinpgp/issues",
  "author": {
    "name": "Herbert Hanewinkel",
    "url": "https://www.hanewin.net/"
  },
  "maintainers": [
    {
      "name": "Dossy Shiobara",
      "email": "dossy@panoptic.com",
      "url": "http://panoptic.com/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:dossy/hanewinpgp.git"
  },
  "scripts": {
    "build": "gulp build && npm run build:browserify",
    "build:browserify": "browserify -r ./build/hanewinpgp.js -o build/hanewinpgp.browser.js -x crypto && uglifyjs build/hanewinpgp.browser.js > build/hanewinpgp.browser-min.js",
    "build:browserify:test": "browserify -r ./test/encrypt.js -o build/tests.js -x build/hanewinpgp.js -x tmp -x fs -x child_process -x crypto",
    "build:nodeunit": "test -f node_modules/nodeunit/dist/browser/nodeunit.js || (cd node_modules/nodeunit && make -i browser)",
    "build:test": "npm run build:nodeunit && npm run build:browserify:test",
    "clean": "rimraf build",
    "dist": "npm run build && cp build/hanewin*.js dist/",
    "docs": "jsdoc2md -f src/*.js > API.md",
    "lint": "jshint --reporter node_modules/jshint-stylish/index.js build/hanewinpgp.js",
    "test": "npm run build && nodeunit",
    "test:browser": "npm run build && npm run build:test"
  },
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "browserify": "^14.4.0",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-header": "^1.7.1",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^1.5.1",
    "jsdoc-to-markdown": "^3.0.0",
    "jshint-stylish": "^2.2.1",
    "nodeunit": "^0.9.5",
    "random-js": "^1.0.8",
    "rimraf": "^2.6.2",
    "tmp": "0.0.33",
    "uglify": "^0.1.5"
  },
  "dependencies": {
    "jshint": "^2.9.5"
  }
}
